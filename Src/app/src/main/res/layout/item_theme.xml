<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/themeList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp">

    <com.daxueoo.shopnc.widgets.SelectorImageView
        android:id="@+id/iv_topic_head_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_topic_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_topic_head_icon"
        android:layout_marginTop="10dp"
        android:text="独步清风"
        android:textSize="12sp"
        />

    <com.daxueoo.shopnc.widgets.RelativeTimeTextView
        android:id="@+id/tv_topic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_topic_views"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_topic_head_icon"
        android:layout_toRightOf="@id/iv_topic_head_icon"
        android:text="12 小时前"
        android:textColor="#aaa"
        android:textSize="12sp"
        />

    <com.daxueoo.shopnc.widgets.SelectorImageView
        android:id="@+id/iv_topic_head"
        android:layout_below="@id/iv_topic_head_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_below="@id/iv_topic_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="RobotoSlab-Regular.ttf"
        android:maxLines="1"
        android:text="领导突然安排我明天去相亲，对女方几乎没有了解，求建议或攻略！"
        android:textSize="20sp"
        />

    <LinearLayout
        android:id="@+id/topic_content_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_topic_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_topic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="我是一个懒人，平时喜欢做一些小工具帮自己分担一些工作。"
            android:textColor="#737373"
            android:textSize="14sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/topic_content_list"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableStart="@mipmap/ic_launcher"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="test"/>
        <TextView
            android:text="test"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableStart="@mipmap/ic_launcher"
            android:drawableLeft="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:text="test"
            android:gravity="center"
            android:drawableStart="@mipmap/ic_launcher"
            android:drawableLeft="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>