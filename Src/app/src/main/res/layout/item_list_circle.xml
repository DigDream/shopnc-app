<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/circlelist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/iv_left_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/iv_left_image"
                android:layout_toRightOf="@id/iv_left_image"
                android:text="这是五个字"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_left_title"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/iv_left_image"
                android:layout_toRightOf="@id/iv_left_image"
                android:text="@string/btn_login"
                android:textSize="14sp"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/iv_right_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/iv_right_image"
                android:layout_toRightOf="@id/iv_right_image"
                android:text="这是五个字"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_right_title"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/iv_right_image"
                android:layout_toRightOf="@id/iv_right_image"
                android:text="@string/btn_login"
                android:textSize="14sp"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>