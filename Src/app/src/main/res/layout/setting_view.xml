<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_gray_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/ic_img_line_v"
        android:showDividers="middle"
        android:dividerPadding="16dp"
        android:background="@color/stand_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_my_order"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_my_order"
                android:gravity="end"
                android:layout_gravity="center"
                 />
            <TextView
                android:id="@+id/tv_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="45dp"
                android:text="我的订单"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_gravity="center"
                 />
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_list_right_arr"
                android:gravity="end"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_my_trader"
                android:gravity="end"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="45dp"
                android:text="我的交易"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_gravity="center"
                 />
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_list_right_arr"
                android:gravity="end"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/bg_gray_dark"/>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/stand_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/clickProject"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp">

            <View
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/user_home_project" />


            <TextView
                android:id="@+id/titleProject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="我的回帖"
                android:textColor="#222222"
                android:textSize="16sp" />

            <include layout="@layout/list_item_common_arrow" />

        </LinearLayout>

        <include layout="@layout/divide_1_12" />


        <LinearLayout
            android:id="@+id/clickMaopao"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp">

            <View
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/user_home_maopao" />

            <TextView
                android:id="@+id/titleMaopao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="我的发帖"
                android:textColor="#222222"
                android:textSize="16sp" />

            <include layout="@layout/list_item_common_arrow" />

        </LinearLayout>

        <include layout="@layout/divide_1_12" />



        <include layout="@layout/divide_15_top" />

        <LinearLayout
            android:id="@+id/clickPointRecord"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp">

            <View
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/user_home_topic" />

            <TextView
                android:id="@+id/pointRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="商品收藏"
                android:textColor="#222222"
                android:textSize="16sp" />

            <include layout="@layout/list_item_common_arrow" />

        </LinearLayout>
        <include layout="@layout/divide_1_12" />
        <LinearLayout
            android:id="@+id/clickPointRecord"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp">

            <View
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/user_home_topic" />

            <TextView
                android:id="@+id/pointRecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="服务收藏"
                android:textColor="#222222"
                android:textSize="16sp" />

            <include layout="@layout/list_item_common_arrow" />

        </LinearLayout>
        <include layout="@layout/divide_1_12" />
        <LinearLayout
            android:id="@+id/clickTopic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp">

            <View
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/user_home_topic" />

            <TextView
                android:id="@+id/titleTopic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="交易收藏"
                android:textColor="#222222"
                android:textSize="16sp" />

            <include layout="@layout/list_item_common_arrow" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

