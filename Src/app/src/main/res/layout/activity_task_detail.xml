<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:minLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/et_text_topic_name"/>

            <TextView
                android:id="@+id/tv_task_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="11sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="2015年09月08日 12:00"/>

            <TextView
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/et_text_topic_content"/>


        </LinearLayout>


        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/normal_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_create_white_24dp"
            fab:fab_colorNormal="@color/main_color"
            fab:fab_colorPressed="@color/geek_green"
            fab:fab_colorRipple="@color/half_black"/>
    </RelativeLayout>


</LinearLayout>