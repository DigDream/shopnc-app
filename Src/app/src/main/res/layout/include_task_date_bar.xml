<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_task_date_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center"
        android:background="@color/main_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_yesterday"
                style="@style/TextViewBody"
                android:paddingBottom="5dp"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                android:text="9月06日"
                android:background="@drawable/bg_tv_task_date_normal"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_today"
                style="@style/TextViewBody"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                android:text="9月07日"
                android:background="@drawable/bg_tv_task_date_pressed"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tran2gray_sel"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tomorrow"
                style="@style/TextViewBody"
                android:paddingBottom="5dp"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="12sp"
                android:text="9月08日"
                android:background="@drawable/bg_tv_task_date_normal"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>